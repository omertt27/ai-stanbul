# Production Environment Configuration for AI Istanbul
# Copy this file to .env.prod and fill in your actual values

# =============================================
# CRITICAL PRODUCTION SETTINGS
# =============================================

# OpenAI API Key (REQUIRED)
OPENAI_API_KEY=your_openai_api_key_here

# Google Services API Key (REQUIRED)
GOOGLE_PLACES_API_KEY=your_google_places_api_key_here

# Weather API Key (OPTIONAL)
WEATHER_API_KEY=your_weather_api_key_here

# =============================================
# DATABASE CONFIGURATION
# =============================================

# PostgreSQL Password (REQUIRED - Generate a strong password)
POSTGRES_PASSWORD=your_secure_database_password_here

# Database URL (Generated automatically)
DATABASE_URL=postgresql://istanbul_user:${POSTGRES_PASSWORD}@postgres:5432/istanbul_ai

# =============================================
# SECURITY CONFIGURATION
# =============================================

# Secret Key for JWT/Sessions (REQUIRED - Generate a secure random string)
SECRET_KEY=your_super_secret_key_minimum_32_characters_long

# Redis Password (OPTIONAL but recommended)
REDIS_PASSWORD=your_redis_password_here

# =============================================
# DOMAIN AND SSL CONFIGURATION
# =============================================

# Your domain name (REQUIRED for SSL)
DOMAIN_NAME=aistanbul.app

# Admin email for SSL certificates (REQUIRED for Let's Encrypt)
ADMIN_EMAIL=admin@aistanbul.app

# CORS Origins (comma-separated list)
CORS_ORIGINS=https://aistanbul.app,https://www.aistanbul.app

# =============================================
# APPLICATION CONFIGURATION
# =============================================

# Environment mode
ENVIRONMENT=production

# Application version
APP_VERSION=1.0.0

# =============================================
# MONITORING AND LOGGING
# =============================================

# Log level (ERROR, WARNING, INFO, DEBUG)
LOG_LEVEL=INFO

# Sentry DSN for error tracking (OPTIONAL)
SENTRY_DSN=your_sentry_dsn_here

# =============================================
# PERFORMANCE SETTINGS
# =============================================

# Redis URL
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379/0

# Worker processes for Gunicorn (auto-detected based on CPU cores)
WORKERS=4

# Maximum requests per worker
MAX_REQUESTS=1000

# Worker timeout in seconds
WORKER_TIMEOUT=120

# =============================================
# BACKUP CONFIGURATION
# =============================================

# Backup retention days
BACKUP_RETENTION_DAYS=30

# AWS S3 settings for backups (OPTIONAL)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=your-backup-bucket

# =============================================
# THIRD-PARTY INTEGRATIONS
# =============================================

# Google Analytics ID (OPTIONAL)
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Stripe keys for payments (OPTIONAL)
STRIPE_PUBLIC_KEY=pk_live_xxxxx
STRIPE_SECRET_KEY=sk_live_xxxxx

# =============================================
# RATE LIMITING
# =============================================

# Rate limit per minute for API endpoints
API_RATE_LIMIT=60

# Rate limit per minute for AI endpoints
AI_RATE_LIMIT=10

# =============================================
# CACHE SETTINGS
# =============================================

# Cache TTL in seconds
CACHE_TTL=3600

# Maximum cache size in MB
MAX_CACHE_SIZE=256

# =============================================
# GDPR COMPLIANCE
# =============================================

# Data retention period in days
DATA_RETENTION_DAYS=365

# Cookie consent required
COOKIE_CONSENT_REQUIRED=true

