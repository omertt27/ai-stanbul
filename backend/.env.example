# Production Environment Variables for Backend
# Copy this file to .env.production and fill in your production values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/ai_stanbul_prod
# OR for SQLite in production (not recommended for high traffic):
# DATABASE_URL=sqlite:///./app_prod.db

# API Keys (REQUIRED - Get these from respective services)
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_PLACES_API_KEY=your_google_places_api_key_here
GOOGLE_GEMINI_API_KEY=your_google_gemini_api_key_here

# Production Settings
ENVIRONMENT=production
DEBUG=False
LOG_LEVEL=INFO

# CORS Settings (Add your production domain)
ALLOWED_ORIGINS=["https://yourdomain.com", "https://www.yourdomain.com"]

# Security
SECRET_KEY=your_super_secret_key_for_production_here
JWT_SECRET_KEY=your_jwt_secret_key_here

# External Services
BILETIX_API_URL=https://api.biletix.com
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600
