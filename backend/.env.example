# Production Environment Variables for Backend
# Copy this file to .env and fill in your values

# ===== Environment Configuration =====
ENVIRONMENT=production
DEBUG=False
LOG_LEVEL=INFO

# ===== Database Configuration =====
DATABASE_URL=postgresql://username:password@localhost:5432/ai_stanbul_prod
# OR for SQLite (not recommended for production):
# DATABASE_URL=sqlite:///./app_prod.db

# ===== Redis Configuration =====
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# ===== Security Configuration =====
SECRET_KEY=your_super_secret_key_for_production_here_change_this
JWT_SECRET_KEY=your_jwt_secret_key_here_change_this

# ===== Rate Limiting =====
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# ===== CORS Settings =====
# Add your production domains (comma-separated)
ALLOWED_ORIGINS=["https://yourdomain.com","https://www.yourdomain.com","http://localhost:3000","http://localhost:5173"]

# ===== Sentry Error Tracking (OPTIONAL) =====
# Sign up at https://sentry.io for free error tracking
SENTRY_DSN=your_sentry_dsn_here_optional
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1

# ===== External APIs (OPTIONAL - In-house AI used by default) =====
# Weather API (optional - for weather-aware recommendations)
OPENWEATHER_API_KEY=your_openweather_api_key_optional

# Events API (optional)
BILETIX_API_URL=https://api.biletix.com

# ===== Feature Flags =====
USE_NEURAL_RANKING=True
ADVANCED_UNDERSTANDING_ENABLED=True

# ===== LEGACY (No longer used - kept for reference) =====
# The system uses in-house neural networks (zero cost)
# OPENAI_API_KEY=not_required_anymore
# The system uses OpenStreetMap + OSRM (zero cost)  
