# Production Environment Variables for Render Deployment
# Copy these to Render's Environment Variables section

# Database - Render PostgreSQL (will be auto-provided by Render)
DATABASE_URL=postgresql://username:password@hostname:port/database_name

# API Keys (Set these to your actual production keys)
OPENAI_API_KEY=your_openai_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
GOOGLE_WEATHER_API_KEY=your_google_weather_api_key
GOOGLE_PLACES_API_KEY=your_google_places_api_key
GOOGLE_ANALYTICS_PROPERTY_ID=your_analytics_property_id

# Security Configuration
JWT_SECRET_KEY=generate_a_strong_random_secret_key_for_jwt
SESSION_SECRET=generate_a_strong_random_session_secret
ADMIN_USERNAME=your_secure_admin_username
ADMIN_PASSWORD_HASH=your_bcrypt_hashed_admin_password

# Application Environment
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=info
PORT=8000

# CORS Origins (adjust for your actual domains)
ALLOWED_ORIGINS=https://aistanbul.net,https://ai-stanbul.vercel.app

# Rate Limiting
RATE_LIMIT_ENABLED=true
DAILY_REQUEST_LIMIT=50

# Monitoring and Logging
SENTRY_DSN=your_sentry_dsn_if_using
LOG_FORMAT=json

# Performance Settings
MAX_CONNECTIONS=20
CONNECTION_TIMEOUT=30
REQUEST_TIMEOUT=60

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Features Toggle
ENABLE_CHAT_HISTORY=true
ENABLE_PERSONALIZATION=true
ENABLE_STREAMING=true
ENABLE_ANALYTICS=false
