# Production Environment Variables for Frontend
# Copy this file to .env.production and fill in your production values

# API Endpoints
VITE_API_BASE_URL=https://your-backend-domain.com
VITE_WEBSOCKET_URL=wss://your-backend-domain.com

# Location System API
VITE_LOCATION_API_URL=http://localhost:8000
VITE_LOCATION_API_TIMEOUT=30000

# Map Configuration (100% Free - No Google Maps)
VITE_MAP_PROVIDER=openstreetmap
VITE_OSM_TILE_URL=https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png
VITE_CARTO_TILE_URL=https://cartodb-basemaps-{s}.global.ssl.fastly.net/light_all/{z}/{x}/{y}.png
VITE_ESRI_TILE_URL=https://server.arcgisonline.com/ArcGIS/rest/services/World_Street_Map/MapServer/tile/{z}/{y}/{x}
VITE_DEFAULT_MAP_CENTER_LAT=41.0082
VITE_DEFAULT_MAP_CENTER_LNG=28.9784
VITE_DEFAULT_MAP_ZOOM=13
VITE_ENABLE_GOOGLE_MAPS=false

# Free Geocoding & Routing (No API Keys Required)
VITE_GEOCODING_PROVIDER=nominatim
VITE_NOMINATIM_URL=https://nominatim.openstreetmap.org
VITE_ROUTING_PROVIDER=osrm
VITE_OSRM_URL=https://router.project-osrm.org

# Location System Features
VITE_ENABLE_LOCATION_TRACKING=true
VITE_ENABLE_OFFLINE_MODE=true
VITE_MAX_POI_RECOMMENDATIONS=50
VITE_DEFAULT_SEARCH_RADIUS=2.0

# Privacy & Security
VITE_LOCATION_PRIVACY_MODE=true
VITE_SESSION_TIMEOUT_MINUTES=1440
VITE_ENABLE_LOCATION_HISTORY=false

# Analytics (Optional)
VITE_GOOGLE_ANALYTICS_ID=your_ga_id_here
VITE_VERCEL_ANALYTICS=true

# Feature Flags
VITE_ENABLE_BLOG=true
VITE_ENABLE_CHAT=true
VITE_ENABLE_MAPS=true

# Production Settings
VITE_ENVIRONMENT=production
VITE_DEBUG=false
