/* Reset and full-screen layout */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

/* Ensure no element can interfere with fixed positioning */
* {
  transform-style: preserve-3d;
}

/* Prevent any container from affecting fixed elements */
.min-h-screen, .w-full, .transition-colors {
  position: relative !important;
  z-index: 0 !important;
}

/* Force all fixed elements to stay on top */
[style*="position: fixed"], .fixed, .fixed-logo {
  z-index: 10000 !important;
  position: fixed !important;
  will-change: auto !important;
  transform: translateZ(0) !important;
}

