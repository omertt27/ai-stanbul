@keyframes expandChat {
  0% {
    max-width: 400px;
    min-height: 0;
    opacity: 0.7;
    filter: blur(2px);
  }
  60% {
    max-width: 1000px;
    min-height: 0;
    opacity: 1;
    filter: blur(0.5px);
  }
  100% {
    max-width: 900px;
    min-height: 400px;
    opacity: 1;
    filter: blur(0);
  }
}

