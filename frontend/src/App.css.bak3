/* Main page background with Istanbul image */
.main-page-background {
  position: relative;
  background: linear-gradient(135deg, #0f1011 0%, #1a1b1d 100%);
  min-height: 100vh;
  transition: background 0.3s ease; /* Add transition for smooth theme change */
  padding-top: 85px; /* Reduced padding to account for lower purple bar */
}

.main-page-background::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: url('/istanbul-bridge-bg.jpg');
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  opacity: 0.25; /* Much darker, less vivid wallpaper */
  z-index: -1;
  pointer-events: none;
}

/* Add overlay for better text contrast */
.main-page-background::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(180deg, rgba(0,0,0,0.85) 0%, rgba(0,0,0,0.95) 100%); /* Much darker overlay */
  z-index: -2;
  pointer-events: none;
}





/* Also target the main page when light class is on root */
.light .main-page-background {
  background: #ffffff !important;
}

/* Additional override for any nested elements */

/* Main page logo - bigger version, centered */
.main-page-logo.logo-istanbul {
  text-align: center;
  margin-bottom: 0; /* Minimal margin to bring search bar very close */
  margin-top: -2rem; /* Much higher position - moved up even more */
  padding: 0rem; /* Even smaller padding for tighter spacing */
  position: relative;
  z-index: 100; /* Much higher z-index to ensure it's above everything */
  cursor: pointer; /* Make logo clickable */
  transition: all 0.3s ease;
}

.main-page-logo.logo-istanbul:hover {
  transform: scale(1.02);
}

.main-page-logo .logo-text {
  font-size: 4rem !important; /* Bigger logo (was 11rem) */
  font-weight: 700; /* Normal weight like other pages */
  letter-spacing: 0.15em; /* Consistent with other pages */
  text-transform: uppercase;
  background: linear-gradient(90deg, #818cf8 0%, #6366f1 100%); /* Same as other pages */
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  text-shadow: 0 4px 20px rgba(99, 102, 241, 0.3); /* Reduced shadow like other pages */
  transition: all 0.3s ease;
  position: relative;
  z-index: 101; /* Ensure logo text is above everything */
  cursor: pointer; /* Make logo text clickable */
}

.main-page-logo .logo-text:hover {
  transform: scale(1.05);
  text-shadow: 0 6px 30px rgba(99, 102, 241, 0.5);
}

@media (max-width: 768px) {
  .main-page-logo .logo-text {
    font-size: 10rem !important; /* Bigger mobile logo (was 7rem) */
